{%- set i = 0 -%}
<nav class="fonts-nav">
  <ul>
    {%- for font in collections.fonts -%}
      <li class="fonts-nav-item" style="--i: {{ loop.index }}">
        <a class="fonts-nav-link {{ 'active' if font.url === page.url }}" href="{{ font.url }}" data-nav-item>{{ font.data.title }}</a>
      </li>
      {%- set i = loop.index -%}
    {%- endfor -%}
  </ul>
  <p class="fonts-nav-item contribute" style="--i: {{ i + 1 }}">Missing your favorite font? Caught a mistake? 
    <a href="https://github.com/chriscoyier/coding-fonts#adding-a-font">Edit on GitHub!</a>
    <br />
    <a href="https://www.digitalocean.com/legal/">Legal</a>
  </p>
</nav>